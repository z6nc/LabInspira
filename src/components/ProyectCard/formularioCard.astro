---
const globalLabel = "text-[#3557ee] font-bold";
const globalInput = "text-black p-3 rounded-md text-sm  my-2  border-[1px] border-gray-300 placeholder:text-gray-300  placeholder:font-black";
---

<form action="" id="form" class="bg-white rounded-3xl  text-black flex flex-col p-7 lg:max-w-2xl lg:mx-auto lg:h-full justify-around  ">
    <h1 class="text-center text-2xl font-principal  lg:text-3xl uppercase mb-4 text-[#3054d3] ">Testimonio Card</h1>
     <label for="imagen" class={globalLabel}>Foto:</label>
    <input type="url" class={`${globalInput} imagenes`} name="imagen" id="imagen"  placeholder="Ingrese Url Imagen"  required/>

    <label for="nombre" class={globalLabel}>Nombre:</label>
    <input type="text"  class={`${globalInput} names`} name="nombre" id="nombre" placeholder="Tu nombre"  required/>

    <label for="trabajo" class={globalLabel}>Trabajo:</label>
    <input type="text"  class={`${globalInput} jobs`} name="trabajo" id="trabajo" placeholder="¿A que te dedicas?"/>

    <label for="comentario" class={globalLabel}>Comentario:</label>
    <textarea id="comentario"  class={`${globalInput} commentarios`}  name="comentario" rows="5" cols="40" placeholder="Escribe tu comentario aquí..."></textarea>

    <label for="calificacion" class={globalLabel}>Calificación (1-10):</label>
    <input type="number" id="calificacion"  class={`${globalInput} calificacions`} name="calificacion" min="1" max="10" step="1" />
  
   <button class="showButton  bg-[#001975] py-2 text-white rounded-md font-principal">Enviar</button>

</form>



