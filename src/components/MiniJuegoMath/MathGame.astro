---
const StyleButton ="result-btn bg-[#ea580c91] h-24 lg:mx-5 lg:text-3xl rounded-lg hover:bg-orange-500 border-1 border-orange-500"
---
<div class="flex  gap-4  items-center justify-between">
    <h1 class=" font-principal text-center  lg:text-start text-4xl uppercase"> Math X Master</h1>
     <p class="inline-flex text-xl font-black gap-2" >Score :<span  class="score text-xl">0</span></p>
</div>
<section class="font-principal relative">
    
    <div class="border-1 border-white h-48 lg:h-56   text-2xl  lg:text-4xl  flex  gap-2 items-center justify-center bg-black/40 ">
        <p class="number1">?</p>
        <span>x</span>
        <p class="number2">?</p>
    </div>
    <div class="grid grid-cols-2 gap-5 pt-4 ">
        <!-- Generar con Js -->
      <button id="resul1" class={StyleButton}>?</button>
      <button id="resul2" class={StyleButton}>?</button>
      <button id="resul3" class={StyleButton}>?</button>
      <button id="resul4" class={StyleButton}>?</button>

    </div>
    <div class="grid grid-cols-2 gap-5 pt-4 text-center mt-4 ">
        <button id="Play" class="bg-[#08b30857] border-1 border-primario hover:bg-primario w-full py-5  ">Play</button>
        <button id="Reset" class="bg-[#e63f298e] border-1 border-red-500 hover:bg-red-500 w-full py-5  " >Reset Game</button>

    </div>
      
    <div class="absolute backdrop-blur-sm bg-black/40 w-full h-full lg:h-full  top-0 cursor-pointer     justify-center flex-col gap-4 hidden" id="result"> 
        <p class="text-center text-3xl lg:text-5xl uppercase" id="result-text"> </p>
        <button id="btn-next" class="bg-primario mx-auto py-2 px-4 font-secundaria uppercase">Siguiente</button>
         
    </div>
     
</section>
<script src="/src/scripts/GameMath.js"  ></script>
